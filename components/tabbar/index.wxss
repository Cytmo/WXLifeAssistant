
/* components/custom-tab-bar/tabbar.wxss */
.tab-bar {
  width: 100%;
  height: 60px;
  position: fixed;
  bottom: 0;
  background: #f2f2f2;
  display: flex;
  z-index: 999;
  border-top:1px solid #dddddd
}
.section_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 5px 0 ;
}
.section_item .section_image {
  width: 29px;
  height: 26px;
}
.section_item .section_title {
  font-size: 13px;
  font-weight:300;
}