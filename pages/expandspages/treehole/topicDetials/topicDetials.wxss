.mainview {
  width: 100%;
  margin-bottom: 100rpx;
}

.information {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  padding: 30rpx 20rpx;
  display: flex;
}

.useravatar {
  width: 14%;
}

.userimg {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.userinformation {
  width: 72%;
  margin-left: 20rpx;
}

.information_top {
  margin-top: 20rpx;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.username {
  font-size: 34rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.date {
  font-size: 26rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(156, 162, 187, 1);
}

.information_text {
  padding: 10rpx 0rpx;
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.information_images {
  display: flex;
  flex-wrap: wrap;
}

.images_item {
  width: 170rpx;
  height: 170rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.comments_thumbsup {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.comments{
  margin-right: 50rpx;
}

.comments_thumbsup image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.comments_thumbsup text {
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(156, 162, 187, 1);
  margin-right: 10rpx;
}

.comments-container {
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ddd;
  background-color: #ddd;
}

.write-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #DDD;
  position: fixed;
  bottom:0;
}

.reply-photo{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.write-icon{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 1.5px solid #3B49E0;
  border-radius: 65rpx;
  width: 100%;
  height: 70rpx;
  background-color: #EEE;
}

.write{
  font-size: 30rpx;
  
}

.icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.comment-container {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #fff;
}

.user-date-container {
  display: flex;
  flex-direction: row;
  margin: 10rpx 20rpx 0rpx 20rpx;
  justify-content: space-between;
  align-items: center;
}

.user{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-right: 10rpx;

}



.content {
  margin-left: 118rpx;
  margin-right: 10rpx;
  font-weight: 300;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.delete{
  font-size: 30rpx;
  color: #3B49E0;
  text-align: right;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.contentNew {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
   /* text-indent: 2em;  */
   padding: 2em; 
  }

  .btn{
    font-size:32rpx;
    font-family:SourceHanSansCN-Medium;
    color:rgba(255,255,255,1);
    background:#3B49E0;
    border-radius:5px;
    padding: 2% 5% 2% 5%;
  }

  .texteare{
    height: 45;
    width: 80%;
    background:rgba(255, 255, 255, 1);
    padding: 5rpx 5rpx;
  }
  .texteare textarea{
    font-size:35rpx;
    font-family:SourceHanSansCN-Regular;
    width: 100%;
    height: 100%;
  }
  
  .xblock{
    height: 50;
    width: 100%;
    display: flex;
    /*row 横向  column 列表  */
    flex-direction: row;
  }