
@import "/pages/recommendspages/movies/stars/stars-template.wxss";
 
.movie-container {
  display:flex ;
  flex-direction: row;
  padding: 0 22rpx;
  width:100%;
  height:290rpx;
}
 
.movie-img {
  width:200rpx;
  height:250rpx;
  box-shadow: 0rpx 0rpx 20rpx #696969;
  /* border-radius: 20rpx; */
  display: block;
  margin-left: 0%;
}
 
.movie-title{

  text-align: center;
  display: block;
  font-size: 50rpx;
}

.movie-director{
  display: block;
  text-align: left;
}

.movie-length{
  display: block;
  margin: 10rpx 0;
}

.reccomendNum{
  display: block;
  margin: 10rpx 0;
}

.notrecNum{
  display: block;
  margin: 10rpx 0;
}

.info{
  position: relative;
  align-content: left;
  width: auto;
}

.text-info{
  position: relative;
  right: 100rpx;
}

.star{
  position: relative;
  right: 180rpx;
  top: 250rpx;
}