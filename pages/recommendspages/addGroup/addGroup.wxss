/* pages/recommendspages/add-group/addGroup.wxss */
page{
  --backlight:rgb(243, 243, 245);
  --lighter:  rgb(240, 230, 140);
  --light:    rgb(255, 215, 0);
  --normal:   rgb(218, 165, 32);
  --darker:   rgb(153, 101, 21);
  --dark:     rgb(207, 181, 59);
  --title-grad:linear-gradient(to right, var(--darker) , var(--lighter),rgba(255,255,255,1));
  background-color: rgb(243, 243, 245);
}

.xrow{
  height: 70rpx;
  width: 100%;
  background:rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
}

.bigxrow{
  height: 500rpx;
  width: 100%;
  background:rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.textbefore{
  height: 40rpx;
  margin-left:10px;
  width: 20%;
  background:rgba(255, 255, 255, 1);
  padding: 5rpx 5rpx;
  font-size:35rpx;
  font-family:SourceHanSansCN-Regular;
}

.texteare{
  height: 100%;
  width: 80%;
  background:rgba(255, 255, 255, 1);
  padding: 5rpx 5rpx;
  font-size:35rpx;
  font-family:SourceHanSansCN-Regular;
}

.block{
  height: 100%;
  width: 100%;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}


.textmy{
  height: 50;
  width: 100%;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.btn{
  height: 15%;
  width: 100%;
  font-size:32rpx;
  font-family:SourceHanSansCN-Medium;
  font-weight:normal;
  color: var(--darker);
  border: 2px double var(--darker);
  border-radius:10px;
  padding:3rpx 4rpx 3rpx 4rpx;
}

.content {
font-size: 30rpx;
color: #666;
width: 100%;
height: 100%;
margin-left: 10px;

}

.placeholderclass{
  font-size:35rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(156,162,187,1);
}


.question-images {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}

.q-image-wrap {
  width: 80%;
  height: 80%;
  margin-right: 10rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
}

.q-image {
  flex: 1;
  height: 300rpx;
  width: 100%;
  height: 80%;
}

.q-image-remover {
  text-align: center;
  margin-top: 3%;
  width: 100%;
  height: 20%;
  font-size: large;
  font-weight: bold;
  color: var(--normal);
  text-size-adjust:0.8 ;
}